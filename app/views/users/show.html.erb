<% provide(:title, @user.name) %>

<%= render 'shared/user_info' %>

<% if current_user?(@user) %>

  <h2 class="uk-heading-divier">Today's Feed</h2>
  <% @user.feed.each do |feed| %>
    <div class="row" style="width:600px;">

      <div class="col-lg-1" style="font-size:x-small">
        <%= time(DateTime.parse(feed['created_at']))  %>
      </div>

      <div class="col-lg-11">
        <%=feed['name'] %> is attending <strong><%= link_to feed['title'],  event_path(options={id: feed['event_id']}) %> </strong>
      </div>
    </div>

  <% end %>

  <hr>

  <div class="row">
    <aside class="span4">


      <h3>Please update your interests</h3>
      <%= form_for @user, url: {action: "update_interests"}, method: 'put' do |f| %>


        <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb| %>

          <div class="form-check">
            <%= cb.label(class: "form-check-label") {cb.check_box(class: "form-check-input") + cb.text} %>
          </div>

        <% end %>

        <div class="form-group">
          <%= f.submit class: "btn btn-large btn-primary" %>
        </div>
        </aside>
      <% end %>
      </div>
<% else %>

  <div class="row">
    <aside class="span4">

      <%= render 'follow_form' if signed_in? %>

      <h3>Users's intersts</h3>

      <ul>
        <% @user.tags.each do |tag| %>
          <li><%= tag.name %></li>
        <% end %>
      </ul>

    </aside>
  </div>
<% end %>