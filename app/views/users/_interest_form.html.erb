<% if current_user?(@user) %>

  <h3 class="uk-text-center">Please update your interests</h3>

  <div class="uk-column-1-3 uk-margin-left uk-padding-remove">
  <%= form_for @user, url: {action: 'update_interests'}, method: 'put' do |f| %>

    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb| %>

      <div class="form-check uk-margin-left">
        <%= cb.label(class: 'form-check-label') {cb.check_box(class: 'uk-margin-right uk-checkbox') + cb.text} %>
      </div>

    <% end %>

    <div class="uk-margin-top">
      <%= f.submit class: 'uk-button uk-button-secondary teal' %>
    </div>
  <% end %>
  </div>
<% end %>