<% if signed_in? %>
  <div class="row">
    Hello, <%= current_user.name %>!  Recommended events for you
  </div>
  <br>

  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8">
      <ul class="event-list">
        <%= render @recommended_events %>
      </ul>
    </div>
  </div>
<% else %>
  <div class="hero-unit">
    <h1>Welcome to Group Up</h1>

    <p class="lead center">
      This is the home page for starting your own group and joining the exciting world of groups and meets.
    </p>

    <div class="center">
      <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>

<br>
<section>
  <h2 style="text-align:left;">Popular events</h2>
  <%= render 'shared/popular_events' %>
</section>

<div>
  <h2 style="text-align:left;">Upcoming events</h2>
  <div class="heading-break"></div>
  <%= render 'shared/upcoming_events' %>
</div>
<%= link_to "View all upcoming events.", "events" %>

<h1>Find events by interest</h1>
<div class="row">
  <%= render EventCategory.all %>
</div>