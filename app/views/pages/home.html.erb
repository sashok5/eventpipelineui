<% if signed_in? %>

  <h2 class="uk-heading-divider">Hello, <%= current_user.name %>!</h2>

  <%= render 'shared/recommended_events' %>

<% else %>
  <div class="hero-unit">
    <h1 class="uk-heading-divider">Welcome to Group Up</h1>


    <p class="lead center">
      This is the home page for starting your own group and joining the exciting world of groups and meets.
    </p>

    <div class="center">
      <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>


<%= render 'shared/popular_events' %>

<%= render 'shared/upcoming_events' %>

<%= render 'shared/categories' %>