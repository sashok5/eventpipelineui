<% @user ||= current_user %>
<% if current_user?(@user) %>
  <%= render 'shared/current_user_info' %>
<% else %>

  <div>
    <h1>
      <% if gravatar_for @user %>
        <a href="<%= user_path(@user) %>">
          <%= gravatar_for @user, size: 50 %>
        </a>
      <% end %>
      <span class="uk-margin-left"><%= @user.name %></span>
    </h1>

    <%= render 'shared/stats' %>

  </div>

<% end %>
