
<%
  @image = $interest_images.find { |e| /#{tag.name}/i =~ e }

%>

<div class="card" style="width: 200px; font-weight:bold;margin-top:10px;">
  <%= image_tag @image.nil? ? "rails.png" : "interests/#{@image.split('/').last}", size: 200, class:"card-img-top" %>
  <div class="card-block">
    <button class="uk-button uk-button-secondary teal">
      <%= link_to tag.name,controller: "events", action: "index", interest: tag.id, class: 'uk-link-reset' %>
    </button>
  </div>
</div>
